<div class="flex flex-col items-center pt-24 px-4"> 
  <h1 class="text-5xl text-gray-800"> Your Chats</h1>
  <div class="mt-4 w-full flex justify-end"> 
    <% if current_user.pending_recieved_chat_requests.any? %>
      <%= link_to "#{current_user.pending_recieved_chat_requests.count} requests", chats_recieved_chat_requests_path, class: "bg-purple-500 text-purple-50 p-2 rounded-full" %>
    <% end %>
  </div>
  <div class="max-w-2xl w-full mx-auto mt-4">
    <%= form_with url: chats_user_search_path do |f| %>
      <%= f.label :q, "Search for users to chat with" %>
      <div class="relative overflow-hidden rounded-full">
        <%= f.text_field :q, class: "rounded-full w-full bg-gray-200 border-0 focus:ring-0 pr-20", autocomplete: "off" %>
        <%= button_tag class: "absolute top-0 right-0 h-full w-16 bg-gray-300 hover:bg-blue-500 flex items-center justify-center" do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-8">
            <path fill-rule="evenodd" d="M10.5 3.75a6.75 6.75 0 1 0 0 13.5 6.75 6.75 0 0 0 0-13.5ZM2.25 10.5a8.25 8.25 0 1 1 14.59 5.28l4.69 4.69a.75.75 0 1 1-1.06 1.06l-4.69-4.69A8.25 8.25 0 0 1 2.25 10.5Z" clip-rule="evenodd" />
          </svg>
        <% end %>
      </div>
    <% end %>

    <div id="user-results" class="flex flex-col gap-4 mt-4"> </div>
  </div>
</div>