<div class="flex flex-col items-center pt-24 px-4"> 
  <h1 class="text-5xl"> Start a chat with <%= @user.username %> </h1>
  <div class="max-w-2xl w-full mx-auto mt-8">
    <%= form_with url: chats_chat_requests_path(user_id: @user.id) do |f| %>
      <%= f.label :body, "Send a message to user ( if they accept your request you can chat with them )" %>
      <%= f.text_area :body, class: "block w-full rounded-lg" %>
      <br/>
      <%= f.submit "Send message", class: "p-2 rounded-lg bg-green-500 text-green-50 cursor-pointer hover:scale-105" %>
    <% end %>
  </div>
</div>