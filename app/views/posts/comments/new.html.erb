<div class="w-full flex flex-col items-center pt-24"> 
  <div class="max-w-5xl w-full mx-auto">
    <%= turbo_frame_tag :comments do %>
      <%= form_with model: [@post, @post.comments.new] do |f| %>
        <div class="flex flex-col w-full">
          <%= f.text_area :body, class: "w-full rounded-lg", placeholder: "Enter your comment here" %>
        </div>
        <div class="w-full flex justify-between items-center mt-4">
          <%= link_to "Cancel", "/", class: "bg-gray-500 rounded-lg text-gray-50 p-2 hover:scale-105" %>
          <%= f.submit "Send comment", class: "p-2 rounded-lg bg-green-500 text-green-50 cursor-pointer hover:scale-105" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>